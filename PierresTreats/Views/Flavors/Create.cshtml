@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<div class="container">
  <h1>Add an Flavor</h1>
  
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.FlavorName, "Flavor Name")
    @Html.TextBoxFor(model => model.FlavorName)
  
    <input type="submit" value="add new Flavor" class="btn btn-primary"/>
  }
  
  <p>@Html.ValidationMessageFor(model => model.FlavorName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  
  <p>@Html.ActionLink("See all Flavors", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</
</div>