@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model PierresTreats.Models.Flavor

<div class="container">
  <h1>Edit @Model.FlavorName's information</h1>
  
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)
  
    @Html.LabelFor(model => model.FlavorName, "Name: ")
    @Html.TextBoxFor(model => model.FlavorName)
    <br>
    <input type="submit" value="Save"/> <hr>
  
  }
  
  <p>@Html.ActionLink($"Back to {Model.FlavorName}'s Details", "Details", new { id = Model.FlavorId})</p>
</div>
