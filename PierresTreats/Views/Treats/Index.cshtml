@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<div class="container">
  <h1>All Treats: </h1>
  
  @if (@Model.Count == 0)
  {
    <h3>No treats have been added yet!</h3>
  }
  else
  {
    <ul>
      @foreach (Treat thisTreat in Model)
      {
        <li>@Html.ActionLink($"{thisTreat.TreatName}", "Details", new { id = thisTreat.TreatId }) Available @thisTreat.StockQuantity </li>
      }
    </ul>
  }
  
  <p>@Html.ActionLink("Add new Treat", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Your Home Page", "Index", "Account")</p>
</div>